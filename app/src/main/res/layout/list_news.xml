<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_main_layout">

    <TextView
        android:id="@+id/title_text_view"
        style="@style/NewsTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/title_text_size"
        tools:text="@string/title_text_view" />

    <TextView
        android:id="@+id/section_text_view"
        style="@style/NewsTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_list_view"
        android:textColor="@color/section_text_color"
        android:textSize="@dimen/section_text_size"
        tools:text="@string/section_text_view" />

    <TextView
        android:id="@+id/author_text_view"
        style="@style/AuthorTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_list_view"
        android:textColor="@color/section_text_color"
        android:textSize="@dimen/section_text_size"
        tools:text="@string/section_text_view" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_list_view"
        android:textColor="@color/section_text_color"
        tools:text="@string/date_text_view" />

</LinearLayout>

